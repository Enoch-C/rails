</div>

<script>
  Array.prototype.clone = function() {
    return this.slice(0)
  }
  Array.prototype.and = function(a) {
    var t = this.clone()
    a.forEach(function(item){
      if (!(t.indexOf(item) > -1)) {
        t.push(item)
      }
    })
    return t
  }

  $('.carousel-cards').slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 2000,
    dots: true,
  });

</script>
