<% content_for :page_title do %>
  <%= Spree.t(:new_promoter) %>
<% end %>

<% if false %>
<% content_for :page_actions do %>
  <%= back_to_list_button(Spree::Promoter.model_name.human, admin_promoters_path) %>
<% end %>
<% end %>

<div data-hook="admin_promoter_new_form_header">
  <%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @promoter } %>
</div>

<div data-hook="admin_promoter_new_form">
  <%= form_for [:admin, @promoter], url: spree.admin_promoters_url, method: :post do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>

    <div data-hook="admin_promoter_new_form_buttons">
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>
